{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "required": [
        "name",
        "url",
        "method",
        "path_to_results",
        "variables"
    ],
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "API name",
            "examples": [
                "Twitter",
                "Instagram"
            ]
        },
        "url": {
            "$id": "#/properties/url",
            "type": "string",
            "title": "API endpoint",
            "examples": [
                "https://api.twitter.com/1.1/search/tweets.json"
            ]
        },
        "method": {
            "$id": "#/properties/method",
            "type": "string",
            "title": "HTTP method",
            "enum": [
                "GET",
                "POST"
            ]
        },
        "path_to_results": {
            "$id": "#/properties/path_to_results",
            "type": "array",
            "title": "JSON path to list of results",
            "items": {
                "$id": "#/properties/path_to_results/items",
                "type": "string",
                "title": "Part of JSON path",
                "examples": [
                    "statuses"
                ]
            }
        },
        "variables": {
            "$id": "#/properties/variables",
            "type": "array",
            "title": "Variables",
            "items": {
                "$id": "#/properties/variables/items",
                "type": "object",
                "title": "The Items Schema",
                "required": [
                    "type",
                    "api_name",
                    "from"
                ],
                "properties": {
                    "type": {
                        "$id": "#/properties/variables/items/properties/type",
                        "type": "string",
                        "title": "Parameter's type",
                        "enum": [
                            "string",
                            "int",
                            "int64"
                        ]
                    },
                    "api_name": {
                        "$id": "#/properties/variables/items/properties/api_name",
                        "type": "string",
                        "title": "Name in API",
                        "examples": [
                            "q",
                            "page_count"
                        ]
                    },
                    "from": {
                        "$id": "#/properties/variables/items/properties/from",
                        "type": "string",
                        "title": "Where the parameter comes from",
                        "enum": [
                            "request",
                            "response"
                        ]
                    },
                    "required": {
                        "$id": "#/properties/variables/items/properties/required",
                        "type": "boolean",
                        "title": "If parameter is required",
                        "enum": [
                            true,
                            false
                        ]
                    },
                    "position": {
                        "$id": "#/properties/variables/items/properties/position",
                        "type": "string",
                        "title": "Position in request",
                        "enum": [
                            "body",
                            "header"
                        ]
                    },
                    "relevant": {
                        "$id": "#/properties/variables/items/properties/relevant",
                        "type": "boolean",
                        "title": "Save parameter in corpus",
                        "enum": [
                            false,
                            true
                        ]
                    },
                    "name": {
                        "$id": "#/properties/variables/items/properties/name",
                        "type": "string",
                        "title": "Name in DB",
                        "examples": [
                            "text",
                            "retweets"
                        ]
                    },
                    "default_value": {
                        "$id": "#/properties/variables/items/properties/default_value",
                        "title": "Default value",
                        "examples": [
                            "ABC",
                            "53"
                        ]
                    },
                    "values": {
                        "$id": "#/properties/variables/items/properties/values",
                        "title": "Values to choose from",
                        "type": "array"
                    }
                },
                "oneOf": [
                    {
                        "properties": {
                            "from": {
                                "enum": [
                                    "request"
                                ]
                            }
                        },
                        "required": [
                            "required",
                            "position",
                            "relevant"
                        ]
                    },
                    {
                        "properties": {
                            "from": {
                                "enum": [
                                    "response"
                                ]
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                ]
            }
        }
    }
}
